pipeline {
  agent any
  stages {
    stage('build') {
      steps {
        sh './mvnw clean package -Dcheckstyle.skip'
      }
    }
    stage('Generate SBOM') {
      steps {
        sh 'syft scan dir:. -o spdx-json@2.3  > spring-petclinic.spdx.json'
        sh 'ls -alt spring-petclinic.spdx.json'
        sh 'pwd'
        sh 'find . -type d -print'
      }
    }
//    stage('Push SBOM to Corona') {
//      steps {
//        sh 'python3 upload_spdx.py'
//        docker run containers.cisco.com/upload_spdx:latest
//      }
//    }
  }
}
